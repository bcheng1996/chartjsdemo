<div class="container">
  <canvas id="myChart" width="800" height="800"></canvas>
</div>
<script>
  var ctx = document.getElementById('myChart').getContext('2d');
  let items = "{{labels}}"
  let counts = "{{values}}"
  items = items.split(',')
  counts = counts.split(',')
  var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: items,
      datasets: [{
        label: '# of Purchases',
        data: counts,
        backgroundColor: [
          'rgba(255, 99, 132, 0.2)',
          'rgba(54, 162, 235, 0.2)',
          'rgba(255, 206, 86, 0.2)',
          'rgba(75, 192, 192, 0.2)'

        ],
        borderColor: [
          'rgba(255, 99, 132, 1)',
          'rgba(54, 162, 235, 1)',
          'rgba(255, 206, 86, 1)',
          'rgba(75, 192, 192, 1)'
        ],
        borderWidth: 1
      }]
    },
    options: {
      responsive: false,
      scales: {
        yAxes: [{
          ticks: {
            beginAtZero: true
          }
        }]
      }
    }
  });
</script>